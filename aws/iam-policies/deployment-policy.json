{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "MLNewsCore",
      "Effect": "Allow",
      "Action": [
        "s3:*",
        "ecr:*",
        "ecs:*",
        "lambda:*",
        "rds:*",
        "elasticloadbalancing:*",
        "apigateway:*"
      ],
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "aws:RequestedRegion": "us-east-2"
        }
      }
    },
    {
      "Sid": "Networking",
      "Effect": "Allow",
      "Action": [
        "ec2:*Vpc*",
        "ec2:*Subnet*",
        "ec2:*SecurityGroup*",
        "ec2:*InternetGateway*",
        "ec2:*RouteTable*",
        "ec2:*NetworkInterface*",
        "ec2:Describe*",
        "ec2:CreateTags"
      ],
      "Resource": "*"
    },
    {
      "Sid": "Monitoring",
      "Effect": "Allow",
      "Action": [
        "logs:*",
        "cloudwatch:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ML",
      "Effect": "Allow",
      "Action": [
        "sagemaker:CreateTrainingJob",
        "sagemaker:DescribeTrainingJob",
        "sagemaker:StopTrainingJob",
        "sagemaker:ListTrainingJobs"
      ],
      "Resource": "*"
    },
    {
      "Sid": "IAM",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole",
        "iam:GetRole",
        "iam:CreateRole",
        "iam:AttachRolePolicy",
        "iam:PutRolePolicy"
      ],
      "Resource": "arn:aws:iam::289140051471:role/ml-news-*"
    }
  ]
}
